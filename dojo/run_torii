#!/bin/bash
set -e

torii --version

export PROFILE="dev"
export WORLD_ADDRESS=$(toml get Scarb.toml --raw profile.$PROFILE.tool.dojo.env.world_address)
echo "@WORLD: $WORLD_ADDRESS"

if [[
  "$WORLD_ADDRESS" != "0x"*
]]; then
  echo "! Missing data ðŸ‘Ž"
  exit 1
fi

torii \
  --world $WORLD_ADDRESS $* \
  --allowed-origins "*" --index-pending \

